doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css')
  link(rel='stylesheet' type='text/css' media='screen' href='estilo.css')
  link(rel='shortcut icon' type='image/x-icon' href='/img/favicon.png')
  title Login
section
  .container(style='background-color: rgb(252, 227, 0);')
    .row.mt-5
      .col-md-3
      .col-md-6
        div
          form(action='acceder')
            img.rounded.mx-auto.d-block(src='/img/logo.png' alt='logo' style=' height:160px; width:250px ;')
            br
            label(for='nombre') Nombre de usuario:
            input.form-control(id='nombre' name='usern' placeholder='Digita tu nombre de usuario')
            br
            label(for='contrasena') Contraseña
            input.form-control(id='contrasena' type='password' name='psswd' placeholder='Digita tu contraseña')
            button.btn.btn-warning.mt-3.btn-lg.rounded.mx-auto.d-block(type='button' id='acceder') Ingresar
            br
            br
// Optional JavaScript
// jQuery first, then Popper.js, then Bootstrap JS
script(src='https://code.jquery.com/jquery-3.5.1.min.js')
script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')
script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js')
script(src='/scripts/usuarios/acceso.js')
